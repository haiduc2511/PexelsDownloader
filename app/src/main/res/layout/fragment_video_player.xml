<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.VideoPlayerFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt_add_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm video"
                android:textSize="8sp"
                android:backgroundTint="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/bt_list_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh sách video"
                android:textSize="8sp"
                android:backgroundTint="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/bt_add_video"
                android:layout_marginStart="8dp" />

            <!-- New Buttons -->

            <Button
                android:id="@+id/bt_play_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:text="Phát video"
                android:textSize="8sp"
                app:layout_constraintBottom_toTopOf="@+id/bt_add_video"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bt_speed_up"
                app:layout_constraintVertical_bias="0.444" />

            <Button
                android:id="@+id/bt_pause_play_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:text="Tạm dừng/Phát video"
                android:textSize="8sp"
                app:layout_constraintBottom_toTopOf="@+id/bt_list_video"
                app:layout_constraintStart_toEndOf="@id/bt_play_video"
                app:layout_constraintTop_toBottomOf="@+id/bt_speed_down"
                app:layout_constraintVertical_bias="0.444" />

            <Button
                android:id="@+id/bt_auto_replay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:text="Tự động tua lại"
                android:textSize="8sp"
                app:layout_constraintBottom_toTopOf="@+id/bt_list_video"
                app:layout_constraintStart_toEndOf="@+id/bt_pause_play_toggle"
                app:layout_constraintTop_toBottomOf="@+id/bt_speed_down"
                app:layout_constraintVertical_bias="0.487" />

            <Button
                android:id="@+id/bt_speed_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:text="Tăng tốc độ x2"
                android:textSize="8sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/bt_speed_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:text="Giảm tốc độ x2"
                android:textSize="8sp"
                app:layout_constraintBottom_toTopOf="@id/bt_add_video"
                app:layout_constraintStart_toEndOf="@id/bt_speed_up"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.013" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>